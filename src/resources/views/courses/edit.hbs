<div class='mt-4'>
    <div class='container'>
        <div class='row'>
            <div class='col-lg-12'>
                <h2>Cập nhật khoá học</h2>
                <form method='POST' action='/courses/{{course._id}}?_method=PUT'>
                    <div class='mb-3'>
                        <label for='name' class='form-label'>Tên khoá học</label>
                        <input type='text' value='{{course.name}}' name='name' class='form-control' id='name' />
                    </div>
                    <div class='mb-3'>
                        <label for='description' class='form-label'>Mô tả</label>
                        <textarea
                            name='description'
                            class='form-control'
                            id='description'
                            cols='10'
                            rows='2'
                        >{{course.description}}</textarea>
                    </div>
                    <div class='mb-3'>
                        <label for='videoId' class='form-label'>Video id</label>
                        <input
                            type='text'
                            value='{{course.videoId}}'
                            name='videoId'
                            class='form-control'
                            id='videoId'
                        />
                    </div>
                    <div class='mb-3'>
                        <label for='level' class='form-label'>Trình độ</label>
                        <input type='text' value='{{course.level}}' name='level' class='form-control' id='level' />
                    </div>
                    <button type='submit' class='btn btn-primary'>Cập nhật</button>
                </form>
            </div>
        </div>
    </div>
</div>